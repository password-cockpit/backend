{
    "name": "password-cockpit/backend",
    "description": "Password-cockpit backend",
    "type": "project",
    "homepage": "https://github.com/passwordcockpit/backend",
    "license": "BSD-3-Clause",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "acelaya/ze-content-based-error-handler": "^2.1",
        "codeception/codeception": "^2.3",
        "dasprid/container-interop-doctrine": "^1.0",
        "doctrine/orm": "^2.5",
        "firebase/php-jwt": "^5.0",
        "mtymek/blast-base-url": "^1.0.0",
        "tuupola/cors-middleware": "^0.9.1",
        "tuupola/slim-jwt-auth": "^3.1.1",
        "zendframework/zend-authentication": "^2.5",
        "zendframework/zend-component-installer": "^2.1.0",
        "zendframework/zend-config-aggregator": "^1.1.0",
        "zendframework/zend-crypt": "^3.2",
        "zendframework/zend-db": "^2.9",
        "zendframework/zend-expressive": "^3.0",
        "zendframework/zend-expressive-hal": "^1.0",
        "zendframework/zend-expressive-helpers": "^5.0",
        "zendframework/zend-expressive-router": "^3.0",
        "zendframework/zend-expressive-zendrouter": "^3.0",
        "zendframework/zend-hydrator": "^2.3",
        "zendframework/zend-i18n": "^2.7",
        "zendframework/zend-i18n-resources": "^2.5",
        "zendframework/zend-inputfilter": "^2.8",
        "zendframework/zend-ldap": "^2.10",
        "zendframework/zend-paginator": "^2.8",
        "zendframework/zend-permissions-rbac": "^3.0",
        "zendframework/zend-problem-details": "^1.0",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stratigility": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.2",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.4.0",
        "zfcampus/zf-development-mode": "^3.1",
        "zendframework/zend-expressive-tooling": "^1.0",
        "zircote/swagger-php": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/src/",
            "Authentication\\": "src/Authentication/src/",
            "Authorization\\": "src/Authorization/src/",
            "User\\": "src/User/src",
            "Folder\\": "src/Folder/src",
            "Password\\": "src/Password/src",
            "Log\\": "src/Log/src",
            "File\\": "src/File/src"
        },
        "files": [
            "config/constants.local.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-enable"
        ],
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "check": [
            "@cs-check",
            "@test"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test-debug": [
            "@test-init",
            "sudo php vendor/bin/codecept run --debug",
            "@test-clear"
        ],
        "test": [
            "@test-init",
            "sudo php vendor/bin/codecept run",
            "@test-clear"
        ],
        "swagger": [
            "./vendor/bin/swagger -o ./swagger/swagger.json -e vendor src/"
        ]
    }
}
